.ico0{background-image:url(../img/bzicon.gif);background-repeat:no-repeat;width:67px;height:67px;margin:0 auto;display:block;margin:14px auto;}
.ico_xz{transform:rotate(0deg);}
.ico_xz:hover{transform:rotate(180deg);}
