*,body,html,p,h1,h2,h3,h4,h5{padding:0;margin:0;font-family: "微软雅黑";font-size: 14px;}
ul,li,ol,dd,dl,dt{padding: 0;margin:0;list-style: none;}
a{text-decoration: none;}
a:visited{text-decoration: none;}
a:hover{text-decoration:none;}
a:active{text-decoration: none;}

img{border:none;}
.u {width: 998px;border:1px solid #e0e0e0;margin:0 auto;}
.clearfix:after {
  content: " ";
  display: block;
  clear: both;
  height: 0;
}
.clearfix {
  zoom: 1;
}
.fl {float:left;}
.fr {float:right;}
/*top*/
.wrap{height:27px;width:100%;border-bottom:1px solid #e6e6e6;}
.wrapc{width:1000px;margin:0 auto;line-height:27px;color:#888;}
.log{padding:14px 0;width:1000px;margin:0 auto;}
/*nav*/
.nav{height:52px;widht:100%;background-color:#02b2a8;}
.navc{width:1000px;margin:0 auto;line-height:52px;}
.navc li{float:left;width:100px;text-align:center;}
.navc li a{font-family:"宋体";font-weight:bold;color:#fff;display:block;}
.nav_cur,.navc li a:hover {background-color:#f90;}
/*banner*/
.banner{height:495px;background-color:#ccc;}
/*subnav*/
.subnav {width:100%;height:145px;background-color:#eee;}
